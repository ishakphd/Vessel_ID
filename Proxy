pragma solidity >=0.4.16 <0.9.0;


contract Ownable {
    address public owner;

    /**
      * The Ownable constructor sets the original `owner` of the contract to the sender
      * account.
      */
    constructor() public {
        owner = msg.sender;
    }

    /**
      * Throws if called by any account other than the owner.
      */
    modifier onlyOwner() {
        require(msg.sender == owner);
        _;
    }

    /**
    * Allows the current owner to transfer control of the contract to a newOwner.
    * newOwner The address to transfer ownership to.
    */
    function transferOwnership(address newOwner) public onlyOwner {
        if (newOwner != address(0)) {
            owner = newOwner;
        }
    }

}

 /**
    * Main contract VesselIdentifier includes general Identifiers of the veseel such as IMO Code, Flag and Call Sign.
    * Editing data requires Owner level access, which is coming fom Ownable.
    */

contract VesselIdentifier is Ownable {

    string public ImoCode = "10534567";
    
    string public Flag = "Flag not set yet";
    
    function ChangeFlag(string memory _flag) onlyOwner public {
        Flag = _flag;
    }
    
    string public CallSign = "Call Sign not set yet";
    
    function ChangeCallSign(string memory _CallSign) onlyOwner public {
        CallSign = _CallSign;
    }

    address public VesselDetailsContract = 0x0000000000000000000000000000000000000000;
    
    function ChangeVesselDetailsContract(address _VesselDetailsContract) onlyOwner public {
    VesselDetailsContract = _VesselDetailsContract;
    }

   
}
